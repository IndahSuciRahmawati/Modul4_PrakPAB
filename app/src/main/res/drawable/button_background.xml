<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna latar belakang saat ditekan -->
            <corners android:radius="8dp" /> <!-- Radius sudut button -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang default -->
            <corners android:radius="8dp" /> <!-- Radius sudut button -->
            <stroke
                android:width="1dp"
                android:color="#757575" /> <!-- Warna border button -->
        </shape>
    </item>
</selector>
